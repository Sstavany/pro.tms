{
  "version": 2,
  "builds": [
    { "src": "api/api_handler.py", "use": "@vercel/python" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/api_handler.py" },
    { "src": "/(.*)", "dest": "public/$1" }
  ],
  "crons": [
    { "path": "/api/cron/check", "schedule": "0 * * * *" }
  ]
}
